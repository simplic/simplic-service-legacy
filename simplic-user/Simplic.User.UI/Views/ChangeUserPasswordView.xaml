<simplic:DefaultRibbonWindow x:Class="Simplic.User.UI.ChangeUserPasswordView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:simplic="http://schemas.simplic-systems.com/2016/xaml/presentation"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" 
        Title="Change user's password" Height="330" Width="400"
        WindowStartupLocation="CenterOwner" LayoutContext="Win_ChangeUserPwd" WindowMode="New">
    <Grid Margin="0,10,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Grid.Column="0" Grid.Row="0" Margin="5" Content="{simplic:Localization Key=usermanagment_new_pwd_label}" />
        <telerik:RadPasswordBox Grid.Column="1" Grid.Row="0" Height="27" VerticalAlignment="Top" Name="_passwordBox"
                                Margin="0,5,5,5" Width="250" WatermarkContent="{simplic:Localization Key=usermanagment_enter_new_pwd_label}" />
    </Grid>
</simplic:DefaultRibbonWindow>
